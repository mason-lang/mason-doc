@require "lib"

@import '//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css'
@import '//fonts.googleapis.com/css?family=Overlock|Patua+One|PT+Mono|PT+Sans:400,400italic'

*
	margin 0
	padding 0

a
	text-decoration none
a:hover
	color #f0f

body
	background '../bg.gif'

header-footer-shadow-size = 4px

header
	background-image linear-gradient(#ffe8, #efe8, #eff8)
	box-shadow 0 header-footer-shadow-size (header-footer-shadow-size * 2) gray
	margin-bottom 1em

header

main
	margin 1em

footer
	background #efe8
	box-shadow 0 (header-footer-shadow-size * -1) (header-footer-shadow-size * 2) gray
	margin-top 2em


main
	margin 0 1em
	padding 1em
	background #fff6


#select-module
	font-text()

	display block
	margin-left auto
	margin-right auto
	margin-bottom 0
	width 500px

	label
		gray()
	input
		border none
		width 12em
		border-radius 1em
	button
		font-button()
		font-size 150%
		border none
		border-radius 1em
		background #ffb
	button:hover
		background #ff0
		cursor pointer
